		  case VT_I2:
		  {
				V_I2(&tv[i].tvValue) = 0;
				V_VT(&tv[i].tvValue) = VT_I2;
				ecode = loAddRealTag_a(our_service,
							   &ti[i], /* returned TagId */
							   (loRealTag)(i+1), /* != 0 */
