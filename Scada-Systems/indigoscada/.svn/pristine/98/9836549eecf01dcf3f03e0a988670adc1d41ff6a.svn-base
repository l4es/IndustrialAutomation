		  case VT_R4:
		  {
				V_R4(&tv[i].tvValue) = 0.0;
				V_VT(&tv[i].tvValue) = VT_R4;
				ecode = loAddRealTag_a(our_service,
							   &ti[i], /* returned TagId */
							   (loRealTag)(i+1), /* != 0 */
							   tn[i],
							   0, /* loTF_XXX */
