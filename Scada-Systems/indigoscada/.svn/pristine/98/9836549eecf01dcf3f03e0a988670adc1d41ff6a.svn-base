				V_VT(&tv[i].tvValue) = VT_BSTR;
				ecode = loAddRealTag(our_service,
							 &ti[i], /* returned TagId */
							 (loRealTag)(i+1), /* != 0 */
							 tn[i],
							 0, /* loTF_XXX */
							 rights,
